root = true

[*]
charset = "utf-8"
end_of_line = "lf"
indent_style = "space"
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{c,h}]
indent_size = 4
indent_style = "tab"
tab_width = 4

[*.{json{,c},y{,a}ml}]
indent_size = 2
tab_width = 2

[*.{markdown,md,mkdn}]
indent_size = 2
tab_width = 2

[*.ploy]
indent_size = 2
tab_width = 2
